generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  ChatList ChatContainer[]
}

model ChatContainer {
  id String @id @default(uuid())
  chats  Chat[]
  userId  String
  user    User  @relation(fields: [userId], references: [id])
}

model Chat {
  id       String  @unique
  role     Role
  metadata String?
  parts    Part[]
  chatcontainerId  String
  chatcontainer   ChatContainer   @relation(fields: [chatcontainerId], references: [id])
}

model Part {
  id               String @id
  text             String
  type             String
  state            String
  providerMetadata String
  chatId           String
  chat             Chat   @relation(fields: [chatId], references: [id])

}

enum Role {
  user
  assistant
}
